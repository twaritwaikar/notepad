root = true

[*.{cpp,h}]
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
curly_bracket_next_line = true
indent_brace_style = K&R
indent_style = tab
indent_size = 4

# Ignore paths

[vendor/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

